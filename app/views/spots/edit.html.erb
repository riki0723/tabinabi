<main class="main">
  <div class="inner">
    <div class="top">

    <h1 class="page-heading">観光地編集</h1>
    
    <%= form_with model:@spot, local: true do |f| %>
    <div class="new_spot_form">

      <div class="new_spot_form_first">
        <div class="field">
          <%= f.label :観光地名【必須】 %><br />
          <%= f.text_field :name, placeholder: "name" %>
        </div>
        <div class="field">
          エリア【必須】
        </div>
        <div class="field">
          <%= f.submit "変更", class:"button-spot" %>
          <%=link_to 'もどる', root_path, class:"back-btn" %>
        </div>
      </div>

      <div class="new_spot_form_second">
        <div class="field">
        <%= f.label :観光地説明【必須】 %><br />
        <%= f.text_area :text, size: "90x17", placeholder: "text" %>
        </div>
      </div>

      <div class="new_spot_form_therd">
        <div class="field">
          <%= f.label :画像【必須】 %><br />
          <%= f.file_field :image, class: 'hidden'%>
        </div>
        <div class="field">
          タグ
        </div>
      </div>
    </div>
    <% end %>
    </div>
  </div>
</main>