<main class="main">
  <div class="inner">
    <div class="top">

    <h1 class="page-heading">観光地登録</h1>

    <%= form_with model: @spot, url: spots_path, local: true do |f| %>
    <div class="new_spot_form">

      <div class="new_spot_form_first">
        <div class="field">
          <%= f.label :観光地名【必須】 %><br />
          <%= f.text_field :title, placeholder: "place name" %>
        </div>
        <div class="field">
          <%= f.label :エリア【必須】 %><br />
          <%= f.collection_select(:area_id, Area.all, :id, :name, {}, {class:"select-box"}) %>
        </div>
        <div class="field">
          <%= f.submit "登録", class:"button-spot" %>
        </div>
      </div>

      <div class="new_spot_form_second">
        <div class="field">
          <%= f.label :観光地説明【必須】 %><br />
          <%= f.text_area :text, size: "90x17",value: @text %>
        </div>
      </div>

      <div class="new_spot_form_therd">
        <div class="field">
          <%= f.label :画像【必須】 %><br />
          <%= f.file_field :image %>
        </div>
        <div class="field">
          <%= f.label :name, "タグ【必須】" %>
          <div>タグを複数登録する場合は半角スペースを開けてください</div>
          <%= f.text_field :name, class:"input-tag",placeholder: "例）王道観光地 修学旅行定番 家族旅行" %>
          <div id="search-result">
          </div>
        </div>

      </div>
    </div>
    <% end %>
    </div>
  </div>
</main>